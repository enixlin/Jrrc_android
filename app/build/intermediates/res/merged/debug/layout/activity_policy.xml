<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enixlin.jrrc_android.Activity_Customer" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00fa0a"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:contentDescription="查询条件"
                android:entries="@array/policy_search_type"
                android:spinnerMode="dialog" />

            <EditText
                android:id="@+id/condition"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:hint="请输入查询条件" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:background="@drawable/sharp"
                android:textSize="13sp"
                android:text="@string/search" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/linzhenhuan/AndroidStudioProjects/Jrrc_android/app/src/main/res/layout/activity_policy.xml -->